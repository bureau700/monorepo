    "start": "yarn workspace @monorepo/server start"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-tsx": "~6.3.0",
    "lerna": "^3.22.1",
    "typescript": "^4.0.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
