{
  "name": "@jison/user-service",
  "version": "0.1.0",
  "private": true,
  "description": "Users microservice for Jison",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp -R src/database/fixtures dist/src/database/",
    "typecheck": "tsc",
    "lint": "eslint \"./{src,tests}/**/*.{ts,js}\"",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@jison/dotenv-load": "^0.1.0",
    "@sinclair/typebox": "^0.10.1",
    "fastify": "^3.4.1",
    "fastify-plugin": "^2.3.4",
    "fastify-swagger": "^3.4.0",
    "get-port": "^5.1.1",
    "http-errors": "^1.8.0",
    "jest-extended": "^0.11.5",
    "jose": "^2.0.2",
    "ora": "^5.1.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "typeorm-fixtures-cli": "^1.7.1",
    "typeorm-plus": "^0.1.2",
    "ulid": "^2.3.0",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@types/dotenv-load": "^2.0.0",
    "@types/faker": "^5.1.0",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@types/pg": "^7.14.4",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yargs": "^15.0.5",
    "faker": "^5.1.0",
    "husky": ">=4",
    "jest": "^26.4.2",
    "lint-staged": ">=10",
    "sort-package-json": "^1.44.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
